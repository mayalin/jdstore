<head>
  <style>
    table,th,td{
      border: 1px solid #dddddd;
      border-collapse: collapse;
    }
  </style>
</head>

  <body>

    <div class="pull-right">
      <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default") %>
    </div>
    <br><br>

    <table class="table table-boldered">
      <thead>
        <td>品名</td>
        <td>描述</td>
        <td>数量</td>
        <td>价格</td>
        <td>选项</td>
        <td>创建时间</td>
      </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= product.description %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <td><%= link_to("Edit", edit_admin_product_path(product)) %> |
                <%= link_to("Destroy", admin_product_path(product), method: :delete, :data => {:confirm => "Are you sure?"}) %>
            </td>
            <td><%= product.created_at %></td>

          </tr>
          <% end %>

      </tbody>
    </table>


  </body>
