<head>
  <style>
    table,th,td{
      border: 1px solid #dddddd;
      border-collapse: collapse;
    }
  </style>
</head>

  <body>



    <table class="table table-boldered">
      <thead>
        <th>已下订单</th>
        <th>订单编号</th>
        <th>订单状态</th>
        <th>支付方式</th>
        <th>送货至</th>
        <th>订单明细</th>
        <th>总计</th>
      </thead>
        <tbody>
          <% @orders.each do |order| %>
			<tr>
            <td><%= order.created_at %></td>
            <td><%= link_to(order.token, order_path(order.token)) %></td>
            <td>
              <% if order.is_paid? %>
                  已支付
              <% else %>
                 待支付
              <% end %>
            </td>
            <td><%= order.payment_method %></td>
            <td><%= order.shipping_name %></td>
            <td><% order.product_lists.each do |product_list|%>
                 <%= product_list.product_name %>
                <br>¥ <%= product_list.product_price %>
                <br>
                <% end %>

            </td>
            <td><%= order.total %></td>
            </tr>
          <% end %>

      </tbody>
    </table>


  </body>
